{
  "manifest_version": 3,
  "name": "NaviGuide AI",
  "version": "1.0",
  "description": "Ask questions about any website",
  "permissions": ["activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
